{
  "name": "ml-env (Py3.13, CUDA 13)",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "PYTHON_VERSION": "3.13",
      "CUDA_TAG": "13.0.1-cudnn-runtime-ubuntu22.04"
    }
  },
  "runArgs": ["--gpus", "all"],
  "mounts": ["source=ml-env-cache,target=/opt/.cache,type=volume"],
  "containerEnv": {
    "PYTHONUNBUFFERED": "1",
    "PIP_DISABLE_PIP_VERSION_CHECK": "1"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-azuretools.vscode-docker",
        "github.vscode-github-actions"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/workspaces/.venv/bin/python",
        "python.analysis.typeCheckingMode": "basic",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "jupyter.kernelPickerType": "OnlyIncludeInterpreters"
      }
    }
  },
  "remoteUser": "vscode",
  "postCreateCommand": "uv sync --frozen || uv sync; python -m pip install -U ipykernel; python -m ipykernel install --user --name ds-analytics --display-name 'Python (ds-analytics venv)'; pre-commit install; make gpu-check || true"
}
